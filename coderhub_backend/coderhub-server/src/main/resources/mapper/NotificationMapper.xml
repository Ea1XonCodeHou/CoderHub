<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.eaxon.coderhubserver.mapper.NotificationMapper">

    <resultMap id="BaseResultMap" type="com.eaxon.coderhubpojo.entity.Notification">
        <id column="id" property="id"/>
        <result column="receiver_id" property="receiverId"/>
        <result column="type" property="type"/>
        <result column="content" property="content"/>
        <result column="source_id" property="sourceId"/>
        <result column="source_type" property="sourceType"/>
        <result column="trigger_id" property="triggerId"/>
        <result column="is_read" property="isRead"/>
        <result column="created_at" property="createdAt"/>
        <result column="read_at" property="readAt"/>
    </resultMap>

    <!-- 插入消息通知 -->
    <insert id="insert" parameterType="com.eaxon.coderhubpojo.entity.Notification" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO notification (
            receiver_id, type, content, source_id, source_type, trigger_id, is_read, created_at
        ) VALUES (
            #{receiverId}, #{type}, #{content}, #{sourceId}, #{sourceType}, #{triggerId}, #{isRead}, #{createdAt}
        )
    </insert>

    <!-- 根据ID查询 -->
    <select id="getById" resultMap="BaseResultMap">
        SELECT * FROM notification WHERE id = #{id}
    </select>

    <!-- 查询用户的未读消息列表 -->
    <select id="getUnreadList" resultMap="BaseResultMap">
        SELECT * FROM notification
        WHERE receiver_id = #{receiverId} AND is_read = 0
        ORDER BY created_at DESC
        LIMIT #{limit}
    </select>

    <!-- 统计用户未读消息数量 -->
    <select id="countUnread" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM notification
        WHERE receiver_id = #{receiverId} AND is_read = 0
    </select>

    <!-- 根据ID删除消息 -->
    <delete id="deleteById">
        DELETE FROM notification WHERE id = #{id}
    </delete>

    <!-- 清空用户所有未读消息 -->
    <delete id="deleteAllUnread">
        DELETE FROM notification WHERE receiver_id = #{receiverId} AND is_read = 0
    </delete>

    <!-- 删除过期消息 -->
    <delete id="deleteExpired">
        DELETE FROM notification
        WHERE is_read = 0 AND created_at <![CDATA[ < ]]> #{expireTime}
    </delete>

    <!-- 标记消息为已读 -->
    <update id="markAsRead">
        UPDATE notification
        SET is_read = 1, read_at = #{readAt}
        WHERE id = #{id}
    </update>

</mapper>

