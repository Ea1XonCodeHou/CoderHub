<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eaxon.coderhubserver.mapper.TechStackDictMapper">

    <resultMap id="techStackResultMap" type="com.eaxon.coderhubpojo.entity.TechStackDict">
        <id property="id" column="id"/>
        <result property="techName" column="tech_name"/>
        <result property="isActive" column="is_active"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <select id="getAllActive" resultMap="techStackResultMap">
        SELECT * FROM tech_stack_dict WHERE is_active = 1 ORDER BY id ASC
    </select>

    <select id="getById" resultMap="techStackResultMap">
        SELECT * FROM tech_stack_dict WHERE id = #{id}
    </select>

    <select id="getByIds" resultMap="techStackResultMap">
        SELECT * FROM tech_stack_dict WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <select id="getByCategoryId" resultMap="techStackResultMap">
        SELECT ts.* FROM tech_stack_dict ts
        INNER JOIN category_tech_relation ctr ON ts.id = ctr.tech_id
        WHERE ctr.category_id = #{categoryId} AND ts.is_active = 1
        ORDER BY ts.id ASC
    </select>
</mapper>

